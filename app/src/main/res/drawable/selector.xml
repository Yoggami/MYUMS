<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="30.0dip"
                android:topRightRadius="30.0dip"
                android:bottomLeftRadius="30.0dip"
                android:bottomRightRadius="30.0dip" />
            <stroke
                android:width="1.0dip"
                android:color="#ff5e7974" />
            <gradient
                android:startColor="#ff345953"
                android:endColor="#ff689a92"
                android:angle="-90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="30.0dip"
                     android:topRightRadius="30.0dip"
                     android:bottomLeftRadius="30.0dip"
                     android:bottomRightRadius="30.0dip" />
            <stroke android:width="1.0dip" android:color="#ff5e7974" />
            <solid android:color="#ff58857e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="3.0dip" android:color="#ff00" />
            <corners android:topLeftRadius="30.0dip" android:topRightRadius="30.0dip" android:bottomLeftRadius="30.0dip" android:bottomRightRadius="30.0dip" />
            <gradient android:startColor="#ffe8e8e8" android:endColor="#ffe8e8e8" android:angle="-90.0" />
        </shape>
    </item>
</selector>