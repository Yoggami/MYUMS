<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="uz.dkamaloff.myums">
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ums_dealer_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.PackagesActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Activities.ServicesActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Activities.SmsMinutesActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="locale|layoutDirection"/>
        <activity android:name=".Activities.TariffsActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="locale|layoutDirection"/>
    </application>

</manifest>